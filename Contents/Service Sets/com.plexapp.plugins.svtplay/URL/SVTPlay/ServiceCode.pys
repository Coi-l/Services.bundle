import re

BASE_URL = "http://www.svtplay.se"
SWF_TAG = "PLAYER_SWF="
SWF_PLAYER = BASE_URL + "/public/swf/video/svtplayer-2012.11.swf"
QUAL_HD = 2400
QUAL_HIGH = 1400
QUAL_MED = 850
QUAL_LOW_H = 340
QUAL_LOW = 320
BITRATES = [QUAL_HD, QUAL_HIGH, QUAL_MED, QUAL_LOW_H, QUAL_LOW]
res2bitrate = {1280 : 2400, 1024 : 1400, 640 : 850, 480 : 320}
